{
  "manifest_version": 3,
  "name": "YouTube DataSaver",
  "version": "1.0",
  "description": "YouTube DataSaver is a browser extension designed to help you reduce data usage while browsing YouTube. ",
  "permissions": ["scripting"],
  "host_permissions": ["*://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }      
  ],
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  }
}
